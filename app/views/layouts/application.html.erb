<!DOCTYPE html>
<html>
  <head>
    <title>Accountus</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ff15bdfaf1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to "投稿一覧", tips_path %>
        </li>
        <li>
          <%= link_to "投稿フォーム", new_tip_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user) %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      <% end %>
      <% if user_signed_in? %>
        <div class="seach_form">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <%= f.text_field :content %>
            <%= f.select :model, options_for_select({ "user" => "User", "tip" => "Tip"}) %>
            <%= f.select :method, options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
            <%= f.submit "検索" %>
          <% end %>
        </div>
      <% end %>
    </header>  
    <%= yield %>
  </body>
</html>

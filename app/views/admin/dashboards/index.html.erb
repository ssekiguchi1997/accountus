<div class="container mt-4">
  <h2 class="mb-4">全ユーザー一覧</h2>

  <% if @users.any? %>
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>職業</th>
          <th>経歴</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.job.presence || "―" %></td>
            <td><%= user.career.presence || "―" %></td>
            <td>
              <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">ユーザーは登録されていません。</p>
  <% end %>
</div>
<div class="container px-5 px-sm-0 mt-4">
  <div class= "row">
    <div class="col-md-3">
      <h2>User Info</h2>
        <table class="table">
          <thread>
            <tr>
              <th>Name</th>
              <th><%= current_user.name.presence || "未登録" %></th>
            </tr>
          </thread>
          <tbody>
            <tr>
              <td>Job</td>
              <td><%= current_user.job.presence || "未登録" %></td>
            </tr>
          </tbody>
        </table>
      <div class="row justify-content-center mt-4">
        <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(current_user), class: "btn-wrapper col-10 nav-link text-dark text-center border border-dark rounded" %>
      </div><br>
    <div class="row">
      <h2>Tips投稿</h2>
    </div>
    <div class="row col-md-12">
      <%= form_with model: @tip_form, method: :post do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title, class: "form-control" %></br>
        <h4>詳細</h4>
        <%= f.text_area :detail, rows: '4', class: "form-control" %></br>
        <%= f.submit "Create Tip", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

<div class="col-md-8 offset-md-1">

<h1>編集画面</h1>
<%= form_with(model: @tip, local: true) do |f| %>
  <% if @tip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

      <ul>
        <% @tip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Tipsタイトル</h3>
  <%= f.text_field :title, class: "col-7" %>
  <div class="mt-4"></div>
  <h3>Tips詳細</h3>
  <%= f.text_area :detail,rows: '4', class: "col-7" %></br>
  <%= f.submit '編集', class: "btn btn-success mt-2" %>
<% end %>
<%= link_to '戻る', tips_path %>